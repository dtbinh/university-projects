	private void getPacket(byte[] ip, byte[] shorty,int s)
	{
		for (int i = 0;i<4;i++)
		{
			if (i < ip.length)
			{
				shorty[s+i] = ip[i];
			}else
			{
				shorty[s+i] = 0;
			}
		}
	}
